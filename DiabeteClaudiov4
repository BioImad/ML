    "    print(f\"\\n{col}:\")\n",
    "    counts = df_processed[col].value_counts(normalize=True) * 100\n",
    "    counts_df = pd.DataFrame(counts).reset_index()\n",
    "    counts_df.columns = [col, 'Percentuale']\n",
    "    counts_df['Percentuale'] = counts_df['Percentuale'].map(\"{:.2f}%\".format)\n",
    "    display(counts_df)"
   ]
